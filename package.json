    "dev": "tsx src/api/server.ts",
    "start": "node dist/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "evaluate": "tsx src/scripts/evaluate.ts",
    "evaluate-entailment": "tsx src/scripts/evaluate-entailment.ts",
    "reset-database": "tsx src/scripts/reset-database.ts",
    "generate-eval-data": "tsx src/scripts/generate-eval-data.ts",
